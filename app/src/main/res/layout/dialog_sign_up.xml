<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="310dp"
        android:layout_height="320dp">
    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginBottom="32dp"
                android:layout_marginHorizontal="56dp"
                android:src="@drawable/img_career_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="6dp"
                android:letterSpacing="-0.02"
                android:textSize="19sp"
                android:textColor="#000"
                android:text="이력서는 기억력 테스트가 아니다!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_marginBottom="28dp"
                android:layout_marginLeft="24dp"
                android:text="지금 바로 나의 활동 이력을 입력해보세요"
                android:letterSpacing="-0.02"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:background="#e6e6e6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    android:id="@+id/iv_cancel_popup"
                    android:src="@drawable/ic_cancel_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_okay_popup"
                    android:src="@drawable/ic_okay_popup"
                    android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>